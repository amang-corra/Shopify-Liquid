<div class="max-w-md">
    <div class="text-5xl font-bold my-4">{{ section.settings.title }}</div>
    <div class="my-4">
        <p class="text-base md:text-xl leading-normal">{{ section.settings.subtext_title }}</p>
    </div>
</div>

{% schema %}
    {
        "name": "Template 404",
        "tag": "section",
        "class": "flex items-center justify-center h-screen text-center py-7",
        "settings": [
            {
                "type": "text",
                "id": "title",
                "label": "Title",
                "default": "404"
            },
            {
                "type": "text",
                "id": "subtext_title",
                "label": "404 Subtext Title",
                "default": "This page could not be found."
            }
        ]
    }
{% endschema %}
